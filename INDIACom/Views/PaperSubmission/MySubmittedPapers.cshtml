@model List<INDIACom.Models.PaperDetailsModel>
@{
    ViewBag.Title = "Details of Papers Already Submitted";
    Layout = "~/Views/Shared/Layoutweb.cshtml";
}

<h2>Details of Papers Already Submitted</h2>
@if (Model == null || !Model.Any())
{
    <p>No papers submitted yet.</p>
} 
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Paper ID</th>
                <th>Title</th>
                <th>Event</th>
                <th>Track</th>
                <th>Session</th>
                <th>Chairperson Title</th>
                <th>Review Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var paper in Model)
            {
                <tr>
                    <td>@paper.PaperID</td>
                    <td>@paper.Title</td>
                    <td>@paper.EventName</td>
                    <td>@paper.TrackName</td>
                    <td>@paper.SessionName</td>
                    <td>@paper.ChairpersonTitle</td>
                    <td>@paper.ReviewStatus</td>
                </tr>
            }
        </tbody>
    </table>
}
